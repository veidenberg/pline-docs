.navbar
  box-shadow: 0 2px 20px rgba(0,0,0,0.1)
  opacity: 0.95

.page
  .theme-default-content
    code
      color: #c44
      font-size: 0.9rem

.pline
  width: 100%
  max-width: 500px
  margin: 10px auto
  border-radius: 3px
  box-shadow: 0px 1px 3px #888

//homepage
.homepage
  padding: $navbarHeight 1rem 0
  max-width: 960px
  margin: 0px auto
  display: block
  .header
    text-align: center
    margin-top: 1rem !important
    .logo
      position: relative
      width: 80%
      margin: 0 auto
      margin-bottom: 60px
      img, .logoUI
        display: block
        position: absolute
        top: 0
        left: 0
        width: 60%
        transition: opacity 0.5s, transform 1s ease-out
        box-shadow: 0 0 1px rgba(0,0,0,0.2), 0 10px 30px rgba(0,0,0,0.3)
        border-radius: 4px
        &:nth-child(1)
          position: relative
          left: 10%
        &:nth-child(2)
          left: 20%
          top: 20px
          transition-delay: 0.5s
        &:nth-child(2):hover
          transform: translateY(-45px)
          transition-delay: 0s
          transition-duration: 0.3s
        &:nth-child(3)
          left: 31%
          top: 55px
          transition-delay: 1s
          min-width: 180px
          max-height: 90%
          overflow: hidden
          .pline
            box-sizing: border-box;
            margin: 0
            .pl-btndiv
              display: none
      &.away img, &.away .logoUI
        opacity: 0
        transform: translateY(50px)
    h1
      font-size: 3rem
    h1, .description, .action
      margin: 1.8rem auto
    .description
      max-width: 35rem
      font-size: 1.6rem
      line-height: 1.3
      color: lighten($textColor, 40%)
    .action-button
      font-size: 1.2rem
      padding: 0.8rem 1.6rem
      border-radius: 2rem !important
      margin: 0.3rem 0.5rem
      border-color: darken($accentColor, 20%)
      &:hover
        background-color: darken($accentColor, 3%)
        box-shadow: 0 20px 30px -10px lighten($accentColor, 30%)
        transform: translateY(-3px)
      .icon
        height: 1.2rem
        vertical-align: -0.2rem
        
  .features
    border-top: 1px solid $borderColor
    padding: 1.2rem 0
    margin-top: 2.5rem
    display: flex
    flex-wrap: wrap
    align-items: flex-start
    align-content: stretch
    justify-content: space-between
    .feature
      flex-grow: 1
      flex-basis: 30%
      max-width: 30%
      h2
        font-size: 1.4rem
        font-weight: 500
        border-bottom: none
        padding-bottom: 0
        color: lighten($textColor, 10%)
      p
        color: lighten($textColor, 25%) 
  .footer
    padding: 2rem
    border-top: 1px solid $borderColor
    text-align: center
    color: lighten($textColor, 25%)
    margin-bottom: -3rem 

@media (max-width: $MQMobile)
  .homepage
    .features
      flex-direction: column
      .feature
        max-width: 100%
        padding: 0 2.5rem

@media (max-width: $MQMobileNarrow)
  .homepage
    padding-left: 1.5rem
    padding-right: 1.5rem
    .header
      h1
        font-size: 2rem
      h1, .description, .action
        margin: 1.2rem auto
      .description
        font-size: 1.2rem
      .action-button
        font-size: 1rem
        padding: 0.6rem 1.2rem
      .features.feature
      h2
        font-size: 1.25rem
//docs page
